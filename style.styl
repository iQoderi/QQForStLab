*
  margin 0
  padding 0

.container
  width 100%
  .left-mobile
    width 400px
    height 670px
    background url("./mobile.jpg") no-repeat
    background-size 100%
    margin 100px auto
    position relative
    overflow hidden
    .mobile-content
      width 295px
      height 510px
      position absolute
      left 52px
      top 60px
      background #FFF
      border-radius 3px
      .header
        height 40px
        width 100%
        background #ccc
        background url("./1555054194.jpg") no-repeat
        background-size 100%
        position relative
        .add-friend-btn
          position absolute
          height 30px
          width 30px
          right 5px
          top 5px
          cursor pointer
    .search-input
      width 100%
      height 30px
      padding 5px
      input
        width 95%
        height 30px
        outline none
        border none
        padding-left 5px
        border-radius 5px
        background-color #f2f2f2
        color #666
        font-size 12px
    .friend-list
      padding 0 5px
      overflow-y scroll
      overflow-x hidden
      height 430px
      li
        list-style none
        width 100%
        height 50px
        border-bottom 1px solid #e8e8e8
        img
          width 45px
          height 45px
          border-radius 45px
          vertical-align middle
        .name
          font-size 14px
          color #666666
        .right-btn
          float: right;
          display inline-block
          width 100px
          height 50px
          line-height 50px
          a
            text-decoration none
            color #fff
            display block
            float: left
            width 50%
            height 100%
            text-align center
            font-size 12px
          .f-btn
            background #cccccc
          .d-btn
            background red
    .search-list
      overflow hidden
  .addfriend-box
    position absolute
    height 180px
    width 90%
    margin auto
    background #ffffff
    top 0
    right 0
    left 0
    bottom 0
    z-index 101
    border-radius 5px
    i
      position absolute
      right 10px
      top 10px
      font-size 16px
      cursor: pointer

    p
      text-align center
      margin-top 50px
      input
        width 90%
        height 30px
        line-height 30px
        outline none
        color #666666
        padding-left 5px
        border-radius 5px
        border 1px solid #f2f2f2
    .bottom-btn
      height 50px
      width 200px
      float: right
      margin-top 45px
      a
        text-decoration none
        float right
        display block
        width 50px
        color #666666
        text-align center
        height 30px
        line-height 30px
        font-size 12px
      .sure-btn
        color #50a9d2
        border 1px solid #50a9d2
        border-radius 10px
  .mask
    width 100%
    height 100%
    position absolute
    background #222222
    opacity 0.5
    top 0
    left 0
  .tip
    position absolute
    overflow hidden
    padding 5px
    background #222222
    opacity 0.7
    bottom 20px
    color #ffffff
    border-radius 5px
    font-size 10px
    max-width 200px
    width 120px
    left 0
    right 0
    margin 0 auto
    z-index 102
    text-align center
  .clear
    height 40px
    width 250px
    border 1px solid red
    line-height 40px
    color red
    text-align center
    border-radius 10px
    margin 0 auto
    cursor pointer
    margin-top 350px

  .search-result
    width 100%
    height 500px
    position absolute
    top 0
    background #ffffff
    overflow-y scroll
    overflow-x hidden

  .s-headers
    height 40px
    text-align center
    color #666
    line-height 40px
    position: relative
    i
      position absolute
      right 10px
      top 0
      font-size 20px
      cursor pointer
.suggestion
  color #666666
  text-align center
